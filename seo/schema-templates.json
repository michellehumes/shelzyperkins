{
  "articleSchema": {
    "@context": "https://schema.org",
    "@type": "Article",
    "headline": "{{title}}",
    "description": "{{excerpt}}",
    "image": "{{featured_image}}",
    "author": {
      "@type": "Person",
      "name": "Shelzy Perkins",
      "url": "https://shelzyperkins.com/about/"
    },
    "publisher": {
      "@type": "Organization",
      "name": "ShelzyPerkins",
      "logo": {
        "@type": "ImageObject",
        "url": "https://shelzyperkins.com/logo.png"
      }
    },
    "datePublished": "{{date_published}}",
    "dateModified": "{{date_modified}}",
    "mainEntityOfPage": {
      "@type": "WebPage",
      "@id": "{{permalink}}"
    }
  },
  "productReviewSchema": {
    "@context": "https://schema.org",
    "@type": "Product",
    "name": "{{product_name}}",
    "image": "{{product_image}}",
    "description": "{{product_description}}",
    "brand": {
      "@type": "Brand",
      "name": "{{brand_name}}"
    },
    "offers": {
      "@type": "Offer",
      "url": "{{affiliate_url}}",
      "priceCurrency": "USD",
      "price": "{{price}}",
      "availability": "https://schema.org/InStock",
      "seller": {
        "@type": "Organization",
        "name": "Amazon"
      }
    },
    "review": {
      "@type": "Review",
      "reviewRating": {
        "@type": "Rating",
        "ratingValue": "{{rating}}",
        "bestRating": "5"
      },
      "author": {
        "@type": "Person",
        "name": "Shelzy Perkins"
      }
    }
  },
  "faqSchema": {
    "@context": "https://schema.org",
    "@type": "FAQPage",
    "mainEntity": [
      {
        "@type": "Question",
        "name": "{{question_1}}",
        "acceptedAnswer": {
          "@type": "Answer",
          "text": "{{answer_1}}"
        }
      }
    ]
  },
  "breadcrumbSchema": {
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    "itemListElement": [
      {
        "@type": "ListItem",
        "position": 1,
        "name": "Home",
        "item": "https://shelzyperkins.com"
      },
      {
        "@type": "ListItem",
        "position": 2,
        "name": "{{category}}",
        "item": "{{category_url}}"
      },
      {
        "@type": "ListItem",
        "position": 3,
        "name": "{{title}}",
        "item": "{{permalink}}"
      }
    ]
  },
  "howToSchema": {
    "@context": "https://schema.org",
    "@type": "HowTo",
    "name": "{{title}}",
    "description": "{{description}}",
    "totalTime": "{{time}}",
    "supply": [],
    "tool": [],
    "step": [
      {
        "@type": "HowToStep",
        "name": "{{step_name}}",
        "text": "{{step_text}}",
        "image": "{{step_image}}"
      }
    ]
  },
  "itemListSchema": {
    "@context": "https://schema.org",
    "@type": "ItemList",
    "name": "{{list_title}}",
    "description": "{{list_description}}",
    "numberOfItems": "{{count}}",
    "itemListElement": [
      {
        "@type": "ListItem",
        "position": 1,
        "url": "{{item_url}}",
        "name": "{{item_name}}"
      }
    ]
  }
}
